#include <WiFi.h>
#include <WiFiClientSecure.h>
#include <PubSubClient.h>


int distance = 0;
// ------------------- PIN -------------------
int relaypin = 17;
int OUT_PIN = 34;


// ------------------- WiFi -------------------
const char* ssid = "Pach_2.4G";  //ชื่อWiFii
const char* password = "0851944933";  //ใส่รหัสWiFii


// ------------------- HiveMQ -------------------
const char* mqtt_server = "dc28e3b215284be0b1eecbc0e819d0b0.s1.eu.hivemq.cloud"; //ใส่ตามคลิป
const int mqtt_port = 8883; //ใส่ตามคลิป
const char* mqtt_user = "TEST123"; //ใส่ตามคลิป
const char* mqtt_pass = "1234567890Qa"; //ใส่ตามคลิป


WiFiClientSecure espClient;
PubSubClient client(espClient);


// ------------------- MQTT CALLBACK -------------------
void callback(char* topic, byte* payload, unsigned int length) {
  String val = "";
  for (int i = 0; i < length; i++) val += (char)payload[i];


  Serial.print("MQTT Received: ");
  Serial.println(val);




  if (val == "1") {
    digitalWrite(relaypin, HIGH);
    Serial.println("LED -> OFF");
  }
  else if (val == "0") {
    digitalWrite(relaypin, LOW);
    Serial.println("LED -> ON");
  }
}


// ------------------- SETUP -------------------
void setup() {
  Serial.begin(115200);


  pinMode(relaypin, OUTPUT);
  pinMode(OUT_PIN, INPUT);

  // WiFi
  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);
  Serial.print("กำลังเชื่อม WiFi");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nเชื่อม WiFi แล้ว");


  // MQTT
  espClient.setInsecure();
  client.setServer(mqtt_server, mqtt_port);
  client.setCallback(callback);

  reconnect();
}


// ------------------- MQTT RECONNECT -------------------
void reconnect() {
  while (!client.connected()) {
    Serial.print("กำลังเชื่อม MQTT...");
    if (client.connect("esp32Client", mqtt_user, mqtt_pass)) {
      Serial.println("เชื่อมแล้ว!");
      client.subscribe("TOPIC");   // แก้ใส่ TOPIC ของ relay
    } else {
      Serial.print("failed, rc=");
      Serial.println(client.state());
      delay(2000);
    }
  }
}

// ------------------- LOOP -------------------
void loop() {
  if (!client.connected()) reconnect();
  client.loop();

  distance = analogRead(OUT_PIN);

  Serial.print("Distance: ");
  Serial.print(distance);
  Serial.println(" mm");


  String msg = String(distance);
  client.publish("TOPIC", msg.c_str());   // แก้ใส่ TOPIC ของ Ultrasonic ส่งค่าไป Node-RED


  delay(500);
}
